extends ../layouts/base.pug

block content 
    .text-center.p-3 
        .shadow.mb-3.p-3 
            h4 Voici le résultat de vos dés 
            each result in results 
                p.d-inline.me-2=result 

        if !win
            .shadow.bg-dark.bg-gradient.bg-opacity-25.p-3
                p Perdu
        else
            .shadow.p-3 
                h4.h1.text-success Victoire 
                p #{win.winType} ! Vous gagnez #{win.nbrBakeryWon} patisserie.s !

                div.w-75.m-auto 
                    each earnBakery in earnings 
                        .shadow.p-3.d-flex.justify-content-between.align-items-center.mb-3 
                            img(src=`img/${earnBakery.bakery.photoPath}`, alt="Photo de la patisserie", width="200", height="200")
                            p=earnBakery.bakery.name
                            p Gagné le #{moment(earnBakery.createdAt).format("DD/MM/YYYY à HH:mm:ss")} 

